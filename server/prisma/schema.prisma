generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String
  password String
  movies   Movie[]
}

model Movie {
  id               String
  status           String
  rating           Int?
  watched_location String?
  user             User    @relation(fields: [userId], references: [id])
  userId           String

  @@id([userId])
}
